{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "rustTestRule": {
      "x-doc-order": 1,
      "title": "RustTestRule",
      "description": "Rust テストの存在を検証する",
      "allOf": [
        {
          "$ref": "common.schema.json#/definitions/ruleBase"
        },
        {
          "type": "object",
          "required": [
            "type",
            "label",
            "message"
          ],
          "properties": {
            "type": {
              "x-property-order": 0,
              "const": "require_rust_test"
            },
            "rust_test": {
              "x-property-order": 1,
              "description": "Rust テスト存在検証設定",
              "$ref": "#/definitions/rustTestConfig"
            }
          }
        }
      ]
    },
    "rustTestConfig": {
      "x-doc-order": 2,
      "title": "RustTestConfig",
      "description": "Rust テスト存在検証設定",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "unit": {
          "x-property-order": 0,
          "description": "ユニットテスト設定",
          "$ref": "#/definitions/rustUnitTestConfig"
        },
        "integration": {
          "x-property-order": 1,
          "description": "統合テスト設定",
          "$ref": "#/definitions/rustIntegrationTestConfig"
        },
        "suffix": {
          "x-property-order": 2,
          "description": "テストファイル名のサフィックス (統合テスト用)",
          "type": "string",
          "default": "_test"
        }
      }
    },
    "rustUnitTestConfig": {
      "x-doc-order": 3,
      "title": "RustUnitTestConfig",
      "description": "Rust ユニットテスト設定",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "require": {
          "x-property-order": 0,
          "description": "検証レベル",
          "$ref": "common.schema.json#/definitions/testRequireLevelSameFile",
          "default": "exists"
        }
      }
    },
    "rustIntegrationTestConfig": {
      "x-doc-order": 4,
      "title": "RustIntegrationTestConfig",
      "description": "Rust 統合テスト設定",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "test_directory": {
          "x-property-order": 0,
          "description": "統合テストディレクトリのパス",
          "type": "string",
          "default": "tests"
        },
        "require": {
          "x-property-order": 1,
          "description": "検証レベル",
          "$ref": "common.schema.json#/definitions/testRequireLevelSameFile",
          "default": "exists"
        }
      }
    }
  }
}
